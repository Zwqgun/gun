#include<stdio.h>

int main()
{
	char cGrade;        /*定义变量表示分数的级别*/
	printf("请输入你的成绩分数:\n");      /*提示用户输入信息*/
	scanf("%c\n",&cGrade);      /*输入分数的级别*/
	printf("你的等级输出分数段为:\n");         /*提示信息*/
	switch(cGrade)        /*switch语句判断*/
	{
		case 'A':
			printf("90~100\n");
			break;
		case 'B':
			printf("80~89\n");
			break;
		case 'C':
			printf("70~79\n");
			break;
		case 'D':
			printf("60~69\n");
			break;
		case 'E':
			printf("<60\n");
			break;
		default:
			printf("你输入的分数级别是错误的！\n");
			break;
		
		 
	} 
	return 0;
}
